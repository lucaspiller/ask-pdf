<%- # Hero %>
<section class="bg-white">
  <div class="container mx-auto py-20 text-center">
    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl">Ask PDF</h1>
    <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 lg:px-48">Upload a PDF and starting asking questions...</p>
    <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
      <a href="https://github.com/lucaspiller/ask-pdf" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
        Learn More
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<%- if @pdf.new_record? %>
<section class="py-20">
  <div class="container mx-auto text-center">
    <h2 class="mb-8 text-2xl font-bold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-4xl">Step 1: Upload a PDF</h2>
    <%= form_for @pdf, data: { turbo: false } do |f| %>
      <label class="block mb-2 text-sm font-medium text-gray-900" for="file_input">Select file</label>
      <%= f.file_field :original_file, class: "block w-full md:max-w-sm mx-auto text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" %>
      <p class="mt-1 text-sm text-gray-500" id="file_input_help">PDF only.</p>
      <button type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800">
        Upload
      </button>
    <% end %>
  </div>
</section>
<% end %>

<%- if @pdf.persisted? && !@pdf.status_ready? %>
  <section class="bg-white py-20">
    <div class="container mx-auto text-center">
      <h2 class="mb-8 text-2xl font-bold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-4xl">Step 2: Hold tight while super advanced AI does it's thing...</h2>

      <div class="text-center">
        <div role="status">
          <svg aria-hidden="true" class="inline w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
            <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
          </svg>
          <span class="sr-only">Loading...</span>
        </div>
      </div>

      <%- # TODO use websockets or polling %>
      <meta http-equiv="refresh" content="5">
    </div>
  </section>
<%- end %>

<%- if @pdf.persisted? && @pdf.status_ready? %>
  <section class="py-20">
    <div class="container mx-auto text-center">
      <h2 class="mb-8 text-2xl font-bold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-4xl">Step 3: Start chatting!</h2>
      <%= form_with url: query_pdf_path(@pdf), method: :post, data: { turbo: false } do |f| %>
        <div class="w-full lg:max-w-md mx-auto mb-4 border border-gray-200 rounded-lg bg-gray-50">
          <div class="px-4 py-2 bg-white rounded-t-lg">
            <label for="comment" class="sr-only">Your question</label>
            <%= f.text_area :question, value: @question, rows: 4, class: "w-full px-0 text-sm text-gray-900 bg-white border-0 focus:ring-0", placeholder: "Write a question...", required: "true" %>
          </div>
          <div class="flex items-center justify-end px-3 py-2 border-t">
            <button type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800">
              Ask a question
            </button>
          </div>
        </div>
      <% end %>

      <%- if @answer.present? %>
      <div>
        <div class="text-left w-full lg:max-w-md px-4 py-10">
          <%= simple_format @answer %>
        </div>
      </div>
      <% end %>
    </div>
  </section>
<% end %>